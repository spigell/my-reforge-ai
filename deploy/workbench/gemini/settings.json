{
  "security": {
    "auth": {
      "selectedType": "oauth-personal"
    }
  },
  "model": {
    "maxSessionTurns": 100
  },
  "context": {
    "fileName": [
      "AGENTS.md",
      "GEMINI.md"
    ],
    "loadMemoryFromIncludeDirectories": true,
    "fileFiltering": {
      "respectGitIgnore": true,
      "respectGeminiIgnore": true
    }
  },
  "advanced": {
    "excludedEnvVars": [
      "DEBUG",
      "DEBUG_MODE",
      "NODE_ENV"
    ]
  },
  "mcpServers": {
    "github-mcp": {
      "httpUrl": "http://mcp-github:8080/mcp/"
    }
  },
  "telemetry": {
    "enabled": true,
    "outfile": "/tmp/gemini.log"
  },
  "tools": {
    "enableToolOutputTruncation": false,
    "core": [
      "read_many_files",
      "edit",
      "run_shell_command(yarn add)",
      "run_shell_command(yarn install)",
      "run_shell_command(./node_modules/.bin/eslint .)",
      "run_shell_command(./node_modules/.bin/tsc --build)",
      "run_shell_command(node --test dist/**/*.test.js)",
      "run_shell_command(ls)",
      "run_shell_command(find)",
      "run_shell_command(echo)",
      "run_shell_command(curl)",
      "run_shell_command(cat)",
      "run_shell_command(mkdir)",
      "run_shell_command(chmod)",
      "run_shell_command(grep)",
      "run_shell_command(git)",
      "ls",
      "read_file",
      "write_file",
      "grep",
      "glob",
      "web_fetch",
      "web_search",
      "memory",
      "save_memory",
      "replace",
      "search_file_content",
      "list_directory",
      "google_web_search",
      "write_todos"
    ]
  }
}
