{
  "name": "my-reforge-ai",
  "version": "0.0.0",
  "type": "module",
  "license": "UNLICENSED",
  "devDependencies": {
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^20.0.0",
    "@types/winston": "^2.4.4",
    "@typescript-eslint/eslint-plugin": "^8.46.1",
    "@typescript-eslint/parser": "^8.46.1",
    "eslint": "^9.38.0",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-jest": "^29.0.1",
    "handlebars": "^4.7.8",
    "husky": "^9.1.5",
    "js-yaml": "^4.1.0",
    "prettier": "^3.3.3",
    "typescript": "^5.7.2",
    "typescript-eslint": "^8.46.1"
  },
  "scripts": {
    "prepare": "husky",
    "build": "tsc --build",
    "test": "yarn build && node --test dist/**/*.test.js",
    "postbuild": "node ./scripts/prepare-bins.js",
    "plan": "node ./dist/task-planner/cli.js",
    "implement": "node ./dist/task-implementor/cli.js",
    "test-task": "yarn build && ./dist/task-agent-matcher/matcher.js --output-file /tmp/task.json ./tasks/ideas.yaml && ./dist/task-planner/cli.js /tmp/task.json",
    "test-task-implement": "yarn build && ./dist/task-agent-matcher/matcher.js --output-file /tmp/task.json ./tasks/ideas.yaml && node --input-type=module -e \"import fs from 'node:fs'; const data = JSON.parse(fs.readFileSync('/tmp/task.json', 'utf8')); data.task.stage = 'implementing'; fs.writeFileSync('/tmp/task.json', JSON.stringify(data));\" && ./dist/task-implementor/cli.js /tmp/task.json",
    "format": "prettier --write .",
    "lint": "eslint ."
  },
  "bin": {
    "my-reforge-ai-agent-matcher": "./dist/task-agent-matcher/matcher.js",
    "my-reforge-ai-planner": "./dist/task-planner/cli.js",
    "my-reforge-ai-implementor": "./dist/task-implementor/cli.js",
    "my-reforge-ai-executor": "./dist/task-executor/executor.js"
  },
  "dependencies": {
    "@openai/codex": "^0.47.0",
    "@openai/codex-sdk": "^0.47.0",
    "@types/dotenv-safe": "^8.1.6",
    "dotenv": "^16.4.5",
    "dotenv-safe": "^9.1.0",
    "simple-git": "^3.28.0",
    "winston": "^3.18.3"
  }
}
