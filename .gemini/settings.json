{
  "model": {
    "maxSessionTurns": 100
  },
  "context": {
    "fileName": ["AGENTS.md", "GEMINI.md"],
    "fileFiltering": {
      "respectGitIgnore": true
    }
  },
  "advanced": {
    "excludedEnvVars": ["DEBUG", "DEBUG_MODE", "NODE_ENV"]
  },
  "mcpServers": {
    "mcp-github": {
      "httpUrl": "http://mcp-github.my-reforge-ai.svc.cluster.local:8080/mcp/"
    }
  },
  "tools": {
    "core": [
      "read_many_files",
      "edit",
      "run_shell_command(yarn add)",
      "run_shell_command(yarn install)",
      "run_shell_command(./node_modules/.bin/eslint . .)",
      "run_shell_command(./node_modules/.bin/tsc --build)",
      "run_shell_command(node --test dist/**/*.test.js)",
      "run_shell_command(curl)",
      "run_shell_command(cat)",
      "run_shell_command(mkdir)",
      "run_shell_command(chmod)",
      "run_shell_command(git)",
      "ls",
      "read_file",
      "write_file",
      "grep",
      "glob",
      "web_fetch",
      "web_search",
      "memory"
    ]
  }
}
